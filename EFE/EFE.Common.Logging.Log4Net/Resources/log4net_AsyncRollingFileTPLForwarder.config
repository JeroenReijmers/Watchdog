<log4net>
  <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
    <lockingModel type="log4net.Appender.FileAppender+MinimalLock"/>
    <file value="logs\" />
    <staticLogFileName value="false" />  <!--If true will always should be log to the same file, otherwise false.-->
    <appendToFile value="true" />  <!--If false the file will be overwritten, if true the file will be appended to.-->
    <rollingStyle value="Composite" />  <!--Options are: Once (Roll files once per program execution), Size, Date or Composite (Roll files based on both the size and date of the file).-->
    <datePattern value="yyyy.MM.dd'.log'" />  <!--The date pattern to be used for generating file names when rolling over on date.-->
    <maxSizeRollBackups value="10" />  <!--The maximum number of backup files that are kept before the oldest is erased.-->
    <maximumFileSize value="10MB" />  <!--The maximum size that the output file is allowed to reach before being rolled over to backup files.-->
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
    </layout>
  </appender>
  <appender name="AsyncRollingFileTPLForwarder" type="Log4Net.Async.ParallelForwardingAppender,Log4Net.Async">
    <appender-ref ref="RollingFileAppender" />
    <bufferSize value="200" />
  </appender>
  <root>
    <level value="ALL" />  <!--Some of the predefined levels recognized by the system are: Off, Fatal, Error, Warn, Info, Debug and All.-->
    <appender-ref ref="AsyncRollingFileTPLForwarder" />
  </root>
</log4net>